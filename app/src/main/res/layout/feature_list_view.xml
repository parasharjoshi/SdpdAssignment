<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oracle.bits.parasjos.sdpdassignment.ContactDetailsActivity"
    android:orientation="vertical">

    <TableLayout
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:gravity="fill"
        android:layout_height="match_parent">
        <TableRow
            android:id="@+id/home_linear_layout">
                <ImageView
                    android:id="@+id/home_feature_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:visibility="visible"
                    android:background="@null"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:maxHeight="100dp"
                    android:minHeight="70dp"
                    android:maxWidth="100dp"
                    android:minWidth="70dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="fill">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_horizontal"
                        android:layout_weight="1"
                        android:paddingLeft="3dp"
                        android:textColor="@color/colorJetBlack"
                        android:textSize="22dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/activity_horizontal_margin"
                        android:id="@+id/home_feature_label"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_horizontal"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorGrey"
                        android:textSize="18dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/activity_horizontal_margin"
                        android:id="@+id/home_feature_description"/>
                </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
