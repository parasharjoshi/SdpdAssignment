<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oracle.bits.parasjos.sdpdassignment.TabbedSmsActivity"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/display_form"
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:gravity="fill"
        android:layout_height="match_parent">
        <TableRow
            android:id="@+id/contact_linear_layout">
            <ImageView
                android:id="@+id/sms_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:visibility="visible"
                android:src="@drawable/ic_user_account_disabled"
                android:background="@null"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:maxHeight="50dp"
                android:minHeight="50dp"
                android:maxWidth="50dp"
                android:minWidth="50dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="fill">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:textColor="@color/colorJetBlack"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/activity_horizontal_margin"
                    android:id="@+id/sms_from_to"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorGrey"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/activity_horizontal_margin"
                    android:id="@+id/sms_body"/>
            </LinearLayout>
            <TextView
                android:id="@+id/sms_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:visibility="visible"
                android:textSize="14dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
