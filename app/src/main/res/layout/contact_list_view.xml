<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oracle.bits.parasjos.sdpdassignment.ContactDetailsActivity"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/display_form"
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:gravity="fill"
        android:layout_height="match_parent">
        <TableRow
            android:id="@+id/contact_linear_layout">
                <ImageView
                    android:id="@+id/contact_profile"
                    android:src="@drawable/ic_user_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:visibility="visible"
                    android:background="@null"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:maxHeight="50dp"
                    android:minHeight="50dp"
                    android:maxWidth="50dp"
                    android:minWidth="50dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="fill">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_horizontal"
                        android:layout_weight="1"
                        android:paddingLeft="3dp"
                        android:textColor="@color/colorJetBlack"
                        android:textSize="22dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/activity_horizontal_margin"
                        android:id="@+id/contact_name"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill_horizontal"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorGrey"
                        android:textSize="18dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/activity_horizontal_margin"
                        android:id="@+id/contact_phone"/>
                </LinearLayout>

            <ImageButton
                android:id="@+id/contact_SMS_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:visibility="visible"
                android:background="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <ImageButton
                android:id="@+id/contact_call_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:visibility="visible"
                android:background="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
